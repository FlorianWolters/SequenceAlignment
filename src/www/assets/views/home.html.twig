{# home.html.twig #}
{% extends "default.html.twig" %}

{% block header %}
<a href="{{ config.meta.project_url }}">
    <img style="position: absolute; top: 0; left: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png" alt="Fork me on GitHub" />
</a>
<h1>{{ config.meta.title }}</h1>
{% endblock %}

{% block main %}
<form action="{{ path('home') }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
        <legend>Select the type of the sequences to align</legend>
        {{ form_widget(form) }}
        <button type="submit" class="btn">Proceed</button>
    </fieldset>
</form>
{% endblock %}

{% block footer %}
<p>&copy; {{ config.meta.year }} {{ config.meta.author }}</p>
{% endblock %}
