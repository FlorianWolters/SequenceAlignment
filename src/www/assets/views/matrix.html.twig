{# index.html.twig #}
{% extends "index.html.twig" %}

{% block main %}

<button type="button" id="nextStep">NextStep</button>
<br/>
<br/>

{# Remove cellspacing and cellpadding when properly formated with css #}
<table id="matrix" border="1" cellspacing="5" cellpadding="5">
    <tr>
        <td class="topLeftCell"></td>
    {% for firstChar in firstSequence %}
        <td class="topRow">{{ firstChar }}</td>
    {% endfor %}
    </tr>
    {% for secondChar in secondSequence %}
    <tr>
        <td class="leftColumn">{{ secondChar }}</td>
        {% for i in range (0, firstSequence|length-1) %}
            <td></td>
        {% endfor %}
    </tr>
    {% endfor %}
</table>

{% endblock %}
