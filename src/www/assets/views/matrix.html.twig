{# index.html.twig #}
{% extends "index.html.twig" %}

{% block main %}

<button type="button" id="nextStep">Next Step</button>
<button type="button" id="nextRow">Next Row</button>
<button type="button" id="completeAlignment">Show Complete Alignment</button>
<button type="button" id="reset">Reset</button>

<br/>
<br/>

{# Remove cellspacing and cellpadding when properly formated with css #}
<div id="matrix">
<table id="matrix" border="1" cellspacing="5" cellpadding="5">
    <tr>
        <td class="topLeftCell"></td>
    {% for firstChar in firstSequence %}
        {% if loop.last %}
            <td class="topRightCell">{{ firstChar }}</td>
        {% else %}
            <td class="topRow">{{ firstChar }}</td>
        {% endif %}
    {% endfor %}
    </tr>
    {% for secondChar in secondSequence %}
    <tr>
        {% if loop.last %}
            <td class="bottomLeftCell">{{ secondChar }}</td>
        {% else %}
            <td class="leftColumn">{{ secondChar }}</td>
        {% endif %}
            
        {% for i in range (0, firstSequence|length-1) %}
            {% if loop.last and loop.parent.loop.last %}
                <td class="bottomRightCell"></td>
            {% else %}
                <td></td>
            {% endif %}
        {% endfor %}
    </tr>
    {% endfor %}
</table>
</div>

{% endblock %}
